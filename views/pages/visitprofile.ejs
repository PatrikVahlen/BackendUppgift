<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>This is <%=profileId%>'s profile</h1><br>
        </div>

        <div>
            <% entries.forEach(entry=> { if(profileId===entry.user.name){%>
                <div class="tweet">
                    <div class="circular--landscape">
                        <img
                            src="data:entry.user/<%=entry.user.img.contentType%>;base64, <%=entry.user.img.data.toString('base64')%>">
                    </div>
                    <p>
                        <%= entry.user.name%>
                    </p>
                    <p>
                        <%= entry.content %>
                    </p>
                    <p>
                        <%= entry.date %>
                    </p>
                    <p>
                        <%= entry.user._id %>
                    </p>
                    <p>
                        <%= entry.user.name%> follows this many: <%= entry.user.following.length %>
                    </p>
                    <p>
                        <%= entry.user.name%> has this many followers: <%= entry.user.followers.length %>
                    </p>

                    <a href="/follow/<%=entry.user._id%>">
                        Follow
                    </a>
                    <a href="/unfollow/<%=entry.user._id%>">
                        Un-Follow
                    </a>
                </div>
                <% }}) %>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>