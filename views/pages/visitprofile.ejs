<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>This is <%=profileId%>'s profile</h1>
            <input type="submit" value="Back">
        </div>
        <div>
            <% entries.forEach(entry=> { if(profileId===entry.user.name){%>
                <div class="entry">
                    <p>
                        <%= entry.user.name%>
                    </p>
                    <p>
                        <%= entry.content %>
                    </p>
                    <p>
                        <%= entry.date %>
                    </p>
                </div>
                <% }}) %>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>