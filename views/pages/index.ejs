<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-8">
                <div class="jumbotron">
                    <h1>Welcome</h1>
                    <form method="POST">
                        Content:<br />
                        <textarea name="content" required></textarea><br />
                        <input type="submit" value="Save" />
                    </form>
                    <a href="/user/logout">Log out</a>
                </div>
            </div class="col-sm-4">
            <% entries.forEach(entry=> { %>
                <ul class="card">
                    <li><a href="/<%=entry.user.name%>">
                            <%= entry.user.name%>
                        </a></li>
                    <li>
                        <%= entry.content %>
                    </li>
                    <li>
                        <%= entry.date %>
                    </li>
                </ul>
                <% }) %>
        </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>