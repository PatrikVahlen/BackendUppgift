<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron">
                    <h1>Welcome <%=welcomeName%>
                    </h1>
                    <form method="POST">
                        Content:<br />
                        <textarea name="content" required></textarea><br />
                        <input type="submit" value="Save" />
                    </form>
                    <a href="/user/logout">Log out</a>
                </div>
            </div class="col-sm-12">
            <% entries.forEach(entry=> { %>
                <div class="tweet">
                    <div class="circular--landscape">
                        <img
                            src="data:entry.user/<%=entry.user.img.contentType%>;base64, <%=entry.user.img.data.toString('base64')%>">
                    </div>
                    <p><a href="/<%=entry.user.name%>">
                            <%= entry.user.name%>
                        </a></p>
                    <p>
                        <%= entry.content %>
                    </p>
                    <p>
                        <%= entry.date %>
                    </p>
                    <p>
                        <%= entry.user.following[0]%>
                    </p>
                </div>
                <% }) %>
        </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>