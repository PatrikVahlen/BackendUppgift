<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron">
                    <h1>Welcome <%=welcomeName%>
                    </h1>
                    <form method="POST">
                        <div class="form-group">
                            <label for="tweetArea"></label>
                            <textarea class="form-control" name="content" placeholder="Tweet something" id="tweetArea"
                                required></textarea><br />
                        </div>
                        <button class="btn btn-primary" type="submit">Tweet</button>
                    </form>
                </div>
            </div class="col-sm-12">
            <% entries.forEach(entry=> { %>
                <div class="tweet">
                    <div class="circular--landscape">
                        <a href="/profile/<%=entry.user._id%>">
                            <img
                                src="data:entry.user/<%=entry.user.img.contentType%>;base64, <%=entry.user.img.data.toString('base64')%>">
                        </a>
                    </div>
                    <a href="/profile/<%=entry.user._id%>">
                        <%=entry.user.name%>
                    </a>
                    <p>
                        <%= entry.content %>
                    </p>
                    <p>
                        <%= entry.date %>
                    </p>
                </div>
                <% }) %>
        </div>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>