<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head'); %>
</head>

<body class="container">

    <header>
        <%- include('../partials/header'); %>
    </header>

    <main>
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron">
                    <h1>Welcome <%=welcomeName%>
                    </h1>
                    <form method="POST">
                        <div class="form-group">
                            <label for="tweetArea"></label>
                            <textarea class="form-control" name="content" placeholder="Tweet something" id="tweetArea"
                                required></textarea><br />
                        </div>
                        <button class="btn btn-primary" type="submit">Tweet</button>
                    </form>
                </div>
            </div>
            <%- include('../partials/tweets'); %>
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>

</body>

</html>